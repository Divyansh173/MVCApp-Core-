@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error1234</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model != null)
{
   <div class="container">
       <p class="alert alert-danger">
           Error Occured in @Model.ControllerName in its @Model.ActionName action name.
           The Error in @Model.ErrorMessage
       </p>
   </div>
   <a asp-action= "@Model.ActionName" asp-controller="@Model.ControllerName">Go Back</a>
}
else
{
    <div class="container">
        <p class=" = alert alert-danger">
            Error occurred in @ViewData["Controller"] Controller in its @ViewData["Action"] action method.
            The Error is @ViewData["ErrorMessage"]
        </p>
    </div>
    <a asp-action="@ViewData["Action"]" asp-controller="@ViewData["Controller"]">Go Back</a>
}
