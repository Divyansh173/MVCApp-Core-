@model Microsoft.AspNetCore.Identity.IdentityRole

<h1>Create New Role</h1>

<form asp-action="Create">
    <div class="container">
        <div class="form-group">
            <labe>Name</labe>
            <input asp-for="@Model.Name" class="form-control"></input>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary"></input>
            <div class="container alert alert-danger visually-hidden">
            <strong>
                @ViewBag.Message
            </strong>
            </div>
        </div>
    </div>    
</form>

<a asp-action="Index">Go Back To List of Roles</a>